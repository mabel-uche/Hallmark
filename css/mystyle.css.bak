*{
	margin: 0;
	padding: 0;
	box-sizing: border-box;
	font-family: sans-serif;
}

html{
	scroll-behavior: smooth;
}

.navbar{
	background: #000000;
	padding: 1rem 8rem;
	z-index: 1000;
}

.navbar .navbar-brand{
	font-size: 1.4rem;
	font-weight: 700;
}
#navbarSupportedContent > ul > li:nth-child(n) > a{
	color: #fff;
	font-size: 1.1rem;
	padding: 0 0.8rem; 
}
#navbarSupportedContent > ul > li:nth-child(n) > a:hover,
#navbarSupportedContent > ul > li:nth-child(n) > a:active{
	color: #00BF85;
}
#navbarSupportedContent > button{
	background: #00BF85;;
	font-weight: 600;
	padding: 0.4rem 1.4rem;
	border-radius: 30px;
}

.mid{
	width: 100%;
	height: 100vh;
	overflow: hidden;
	display: flex;
	flex-direction: column;
	justify-content: center;
	align-center: center;
	text-align: center;
}

.mid video{
	width: 100%;
	height: 100%;
	pointer-events: none;
	object-fit: cover;
	position: absolute;
	top: 50%;
	left: 50%;
	transform: translate(-50%, -50%);
}

.mid .hero{
	position: relative;
}

.mid .hero p{
	width: 55%;
	font-size: 1.1rem;
	letter-spacing: 0.2px;
	padding-bottom: 1rem
}

.mid .overlay{
	position: absolute;
	top: 0;
	left: 0;
	right: 0;
	bottom: 0;
	weight: 100%;
	hight: 100%;
	background: rgba(0,0,0,0.75);
}

.about{
	background: #fff;
}
.about .text{
	display: flex;
	flex-direction: column;
	justify-content: flex-start;
	align-items: flex-start;
	margin: auto;
	color: #0000f;
}

.discovery{
	background-color: #000000;	
}

.discovery .text{
	display: flex;
	flex-direction: column;
	justify-content: flex-start;
	align-items: flex-start;
	margin: auto;
	color: #fff;	
}

.discovery .text h6{
	color: #00bf7f;
	font-weight: 800;
	font-size: 1rem;
	letter-spacing: 2px;
}

.discovery .text h2{
	color: #f7f5f4;
	font-weight: 700;
	font-size: 2.7rem;
}

.discovery .text p{
	color: #f7f5f4;
	font-weight: 400;
	font-size: 1.1rem;
	letter-spacing: 0.5px;
}

.service{
	background: #bc8f8f;
}

.service .one{
	background: #fff;
	display: flex;
	flex-direction: column;
	justify-content: center;
	align-items: center;
	text-align: center;
	padding: 2rem 1.5rem;
	border-radius: 7px;
}
.service .two{
	background: #fff;
	display: flex;
	flex-direction: column;
	justify-content: center;
	align-items: center;
	text-align: center;
	padding: auto;
	border-radius: 7px;
}
.service .three{
	background: #fff;
	display: flex;
	flex-direction: column;
	justify-content: center;
	align-items: center;
	text-align: center;
	padding: 1rem 1.5rem;
	border-radius: 7px;
}

#contact{
	background: #000;
} 


@media screen and (max-width: 988px){
	.navbar{
	padding: 1rem;	
}
#navbarSupportedContent > ul{
	padding-left: 0.8rem;
}
#navbarSupportedContent > ul > li:nth-child(n) > a{
		padding: 0.8rem 0; 
}
.mid .hero{
	position: relative;
	padding-top: 3rem;
}
.mid .hero p{
	
	padding-bottom: 0.1rem;
}
}